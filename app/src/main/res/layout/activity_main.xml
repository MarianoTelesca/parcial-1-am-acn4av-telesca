<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="169dp"
        android:layout_height="145dp"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/logoPolideportivo"
            android:layout_width="match_parent"
            android:layout_height="103dp" />

        <TextView
            android:id="@+id/nombrePolideportivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/nombre_polideportivo"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="166dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRight"
        android:layout_width="163dp"
        android:layout_height="486dp"
        android:layout_margin="25sp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/instalacionDerecha1"
            android:layout_width="164dp"
            android:layout_height="162dp" />

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/instalacionDerecha2"
            android:layout_width="match_parent"
            android:layout_height="162dp" />

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/instalacionDerecha3"
            android:layout_width="match_parent"
            android:layout_height="162dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLeft"
        android:layout_width="163dp"
        android:layout_height="486dp"
        android:layout_margin="25sp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/mockViewLeft1"
            android:layout_width="164dp"
            android:layout_height="162dp" />

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/mockViewLeft2"
            android:layout_width="match_parent"
            android:layout_height="162dp" />

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/mockViewLeft3"
            android:layout_width="match_parent"
            android:layout_height="162dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@color/white"
        android:text="@string/descripcion"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>